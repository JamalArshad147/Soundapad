{
    "manifest_version": 3,
    "name": "Dialer Soundboard Pro",
    "version": "1.2",
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "downloads",
        "unlimitedStorage"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "injected-mixer.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_start"
        }
    ]
}